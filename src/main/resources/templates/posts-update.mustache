{{>layout/header}}
<h1>게시글 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">글 번호</label>
                <input id="id" type="text" class="form-control" value="{{post.id}}" readonly>
            </div>

            <div class="form-group">
                <label for="title">글 제목</label>
                <input id="title" type="text" class="form-control" value="{{post.title}}">
            </div>

            <div class="form-group">
                <label for="author">작성자</label>
                <input id="author" type="text" class="form-control" value="{{post.author}}" readonly>
            </div>

            <div class="form-group">
                <label for="content">내용</label>
                <textarea id="content" class="form-control">{{post.content}}</textarea>
            </div>
        </form>

        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button id="btn-update" type="button" class="btn btn-primary">등록</button>
        <button id="btn-delete" type="button" class="btn btn-danger">삭제</button>
    </div>
</div>
{{>layout/footer}}